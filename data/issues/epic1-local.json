      "number": 1,
      "title": "Set up 4-node local K8s cluster",
      "milestone": "1.1 - Local Infrastructure",
      "priority": "p0-critical",
      "effort": 4,
      "labels": ["epic-1-dora-2023", "p0-critical", "type-infrastructure", "comp-kubernetes", "type-ai-agent"],
      "depends_on": [],
      "blocks": [2, 3, 4, 5, 6, 7, 8, 9],
      "description": "Deploy a local 4-node Kubernetes cluster using Docker Desktop, kind, or k3d. This is the foundation for all platform components.",
      "acceptance_criteria": [
        "4 worker nodes running and schedulable",
        "kubectl configured and working",
        "Cluster metrics available",
        "StorageClass configured for PVs",
        "Cluster passes AT-E1-001"
      ],
      "tasks": [
        {
          "id": "1.1",
          "name": "Create Terraform module for local K8s cluster",
          "location": "infra/local/cluster/main.tf",
          "prompt": "Create a Terraform module that:\n1. Deploys a local K8s cluster with 4 nodes (kind or k3d)\n2. Configures StorageClass for local-path-provisioner\n3. Outputs kubeconfig path\n4. Includes variables for node resources (CPU, memory)\nUse best practices for local development."
        },
        {
          "id": "1.2",
          "name": "Create InSpec tests",
          "location": "infra/local/cluster/inspec/controls/cluster.rb",
          "prompt": "Create InSpec tests that verify:\n1. 4 nodes exist and are Ready\n2. All system pods are Running\n3. StorageClass is available\n4. Cluster version is supported (1.28+)\n5. Resource limits are within acceptable range"
        },
        {
          "id": "1.3",
          "name": "Create deployment script",
          "location": "scripts/deploy-local-cluster.sh",
          "prompt": "Create a bash script that:\n1. Checks prerequisites (Docker, kind/k3d, kubectl)\n2. Runs terraform apply\n3. Configures kubectl context\n4. Waits for all nodes to be Ready\n5. Runs InSpec validation\nIncludes error handling and rollback on failure."
        },
        {
          "id": "1.4",
          "name": "Document cluster setup",
          "location": "docs/runbooks/local-cluster-setup.md",
          "prompt": "Create documentation explaining:\n1. Prerequisites and system requirements\n2. Step-by-step setup instructions\n3. Troubleshooting common issues\n4. How to reset/destroy the cluster\n5. Resource requirements and tuning"
        }
      ],
      "validation": "terraform plan && terraform apply\n./scripts/deploy-local-cluster.sh\ninspec exec infra/local/cluster/inspec/\nkubectl get nodes  # Should show 4 Ready nodes"
    },
