{
  "dashboard": {
    "title": "AI Observability Dashboard",
    "tags": ["ai", "anomaly-detection", "smart-alerting", "observability", "ml"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "description": "AI-powered anomaly detection, smart alerting, and system intelligence dashboard",
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "enable": true,
          "expr": "anomaly_detection_total{severity=\"critical\"}",
          "iconColor": "red",
          "name": "Critical Anomalies",
          "tagKeys": "metric,severity",
          "textFormat": "Critical anomaly: {{metric}}",
          "titleFormat": "Critical Anomaly Detected"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "enable": true,
          "expr": "smart_alerting_grouped_total",
          "iconColor": "orange",
          "name": "Alert Groups",
          "tagKeys": "service",
          "textFormat": "Alert group created for {{service}}",
          "titleFormat": "Alert Group Created"
        }
      ]
    },
    "templating": {
      "list": [
        {
          "current": {
            "selected": true,
            "text": "All",
            "value": "$__all"
          },
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "definition": "label_values(anomaly_detection_total, severity)",
          "hide": 0,
          "includeAll": true,
          "multi": true,
          "name": "severity",
          "options": [],
          "query": "label_values(anomaly_detection_total, severity)",
          "refresh": 1,
          "regex": "",
          "skipUrlSync": false,
          "sort": 1,
          "type": "query"
        },
        {
          "current": {
            "selected": true,
            "text": "All",
            "value": "$__all"
          },
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "definition": "label_values(anomaly_detection_total, metric)",
          "hide": 0,
          "includeAll": true,
          "multi": true,
          "name": "metric",
          "options": [],
          "query": "label_values(anomaly_detection_total, metric)",
          "refresh": 1,
          "regex": "",
          "skipUrlSync": false,
          "sort": 1,
          "type": "query"
        },
        {
          "current": {
            "selected": true,
            "text": "All",
            "value": "$__all"
          },
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "definition": "label_values(smart_alerting_received_total, source)",
          "hide": 0,
          "includeAll": true,
          "multi": true,
          "name": "alert_source",
          "options": [],
          "query": "label_values(smart_alerting_received_total, source)",
          "refresh": 1,
          "regex": "",
          "skipUrlSync": false,
          "sort": 1,
          "type": "query"
        }
      ]
    },
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    },
    "panels": [
      {
        "id": 1,
        "type": "row",
        "title": "Active Anomalies Feed (Real-Time)",
        "gridPos": { "x": 0, "y": 0, "w": 24, "h": 1 },
        "collapsed": false
      },
      {
        "id": 2,
        "title": "Active Anomalies Count",
        "type": "stat",
        "gridPos": { "x": 0, "y": 1, "w": 6, "h": 4 },
        "description": "Current number of active anomalies detected",
        "targets": [
          {
            "expr": "sum(anomaly_detection_total{severity=~\"$severity\",metric=~\"$metric\"})",
            "refId": "A",
            "datasource": { "type": "prometheus", "uid": "prometheus" },
            "legendFormat": "Total Anomalies"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 5 },
                { "color": "orange", "value": 10 },
                { "color": "red", "value": 20 }
              ]
            }
          }
        },
        "options": {
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "center"
        }
      },
      {
        "id": 3,
        "title": "Critical Anomalies",
        "type": "stat",
        "gridPos": { "x": 6, "y": 1, "w": 6, "h": 4 },
        "description": "Number of critical severity anomalies",
        "targets": [
          {
            "expr": "sum(anomaly_detection_total{severity=\"critical\",metric=~\"$metric\"})",
            "refId": "A",
            "datasource": { "type": "prometheus", "uid": "prometheus" }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "red", "value": 1 }
              ]
            }
          }
        },
        "options": {
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center"
        }
      },
      {
        "id": 4,
        "title": "Active Alert Groups",
        "type": "stat",
        "gridPos": { "x": 12, "y": 1, "w": 6, "h": 4 },
        "description": "Current number of active smart alert groups",
        "targets": [
          {
            "expr": "sum(smart_alerting_grouped_total)",
            "refId": "A",
            "datasource": { "type": "prometheus", "uid": "prometheus" }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 3 },
                { "color": "orange", "value": 8 },
                { "color": "red", "value": 15 }
              ]
            }
          }
        },
        "options": {
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "center"
        }
      },
      {
        "id": 5,
        "title": "Mean Time to Detection",
        "type": "gauge",
        "gridPos": { "x": 18, "y": 1, "w": 6, "h": 4 },
        "description": "Average time to detect incidents (lower is better)",
        "targets": [
          {
            "expr": "avg(anomaly_detection_duration_seconds_sum / anomaly_detection_duration_seconds_count)",
            "refId": "A",
            "datasource": { "type": "prometheus", "uid": "prometheus" }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "min": 0,
            "max": 300,
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 60 },
                { "color": "orange", "value": 120 },
                { "color": "red", "value": 180 }
              ]
            }
          }
        },
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        }
      },
      {
        "id": 6,
        "title": "Real-Time Anomaly Feed",
        "type": "table",
        "gridPos": { "x": 0, "y": 5, "w": 24, "h": 8 },
        "description": "Live feed of detected anomalies with details",
        "targets": [
          {
            "expr": "sum by (metric, severity) (anomaly_detection_total{severity=~\"$severity\",metric=~\"$metric\"})",
            "refId": "A",
            "datasource": { "type": "prometheus", "uid": "prometheus" },
            "format": "table",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "left",
              "displayMode": "auto"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [{ "color": "green", "value": null }]
            },
            "color": {
              "mode": "thresholds"
            }
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "severity" },
              "properties": [
                {
                  "id": "custom.displayMode",
                  "value": "color-background"
                },
                {
                  "id": "mappings",
                  "value": [
                    { "type": "value", "value": "critical", "text": "CRITICAL", "color": "dark-red" },
                    { "type": "value", "value": "high", "text": "HIGH", "color": "dark-orange" },
                    { "type": "value", "value": "medium", "text": "MEDIUM", "color": "dark-yellow" },
                    { "type": "value", "value": "low", "text": "LOW", "color": "dark-blue" }
                  ]
                }
              ]
            }
          ]
        },
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "displayName": "Value",
              "desc": true
            }
          ]
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true
              },
              "indexByName": {
                "metric": 0,
                "severity": 1,
                "Value": 2
              },
              "renameByName": {
                "metric": "Metric",
                "severity": "Severity",
                "Value": "Count"
              }
            }
          }
        ]
      },
      {
        "id": 7,
        "type": "row",
        "title": "Anomaly Detection Performance",
        "gridPos": { "x": 0, "y": 13, "w": 24, "h": 1 },
        "collapsed": false
      },
      {
        "id": 8,
        "title": "Anomaly Detection Accuracy",
        "type": "gauge",
        "gridPos": { "x": 0, "y": 14, "w": 8, "h": 6 },
        "description": "Detection accuracy (100% - false positive rate)",
        "targets": [
          {
            "expr": "100 - (anomaly_detection_false_positive_rate * 100)",
            "refId": "A",
            "datasource": { "type": "prometheus", "uid": "prometheus" }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "orange", "value": 85 },
                { "color": "yellow", "value": 92 },
                { "color": "green", "value": 95 }
              ]
            }
          }
        },
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true,
          "text": {
            "titleSize": 16,
            "valueSize": 40
          }
        }
      },
      {
        "id": 9,
        "title": "False Positive Rate",
        "type": "stat",
        "gridPos": { "x": 8, "y": 14, "w": 8, "h": 6 },
        "description": "Current false positive rate (target <5%)",
        "targets": [
          {
            "expr": "anomaly_detection_false_positive_rate * 100",
            "refId": "A",
            "datasource": { "type": "prometheus", "uid": "prometheus" }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 2,
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 3 },
                { "color": "orange", "value": 5 },
                { "color": "red", "value": 8 }
              ]
            }
          }
        },
        "options": {
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "center"
        }
      },
      {
        "id": 10,
        "title": "ML Models Loaded",
        "type": "stat",
        "gridPos": { "x": 16, "y": 14, "w": 8, "h": 6 },
        "description": "Number of ML models currently loaded and active",
        "targets": [
          {
            "expr": "anomaly_detection_models_loaded",
            "refId": "A",
            "datasource": { "type": "prometheus", "uid": "prometheus" }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "yellow", "value": 3 },
                { "color": "green", "value": 5 }
              ]
            }
          }
        },
        "options": {
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center"
        }
      },
      {
        "id": 11,
        "title": "Anomaly Detection Processing Time",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 20, "w": 12, "h": 8 },
        "description": "Detection processing latency over time (P50, P95, P99)",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(anomaly_detection_duration_seconds_bucket[5m])) by (le))",
            "refId": "A",
            "datasource": { "type": "prometheus", "uid": "prometheus" },
            "legendFormat": "P50"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(anomaly_detection_duration_seconds_bucket[5m])) by (le))",
            "refId": "B",
            "datasource": { "type": "prometheus", "uid": "prometheus" },
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(anomaly_detection_duration_seconds_bucket[5m])) by (le))",
            "refId": "C",
            "datasource": { "type": "prometheus", "uid": "prometheus" },
            "legendFormat": "P99"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": { "mode": "palette-classic" },
            "custom": {
              "lineInterpolation": "smooth",
              "showPoints": "auto",
              "fillOpacity": 10
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "multi"
          }
        }
      },
      {
        "id": 12,
        "title": "Anomalies by Severity Over Time",
        "type": "timeseries",
        "gridPos": { "x": 12, "y": 20, "w": 12, "h": 8 },
        "description": "Trend of anomalies detected by severity level",
        "targets": [
          {
            "expr": "sum by (severity) (rate(anomaly_detection_total{severity=~\"$severity\"}[5m]))",
            "refId": "A",
            "datasource": { "type": "prometheus", "uid": "prometheus" },
            "legendFormat": "{{severity}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": { "mode": "palette-classic" },
            "custom": {
              "lineInterpolation": "smooth",
              "showPoints": "auto",
              "fillOpacity": 20,
              "stacking": {
                "mode": "normal"
              }
            }
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "critical" },
              "properties": [{ "id": "color", "value": { "fixedColor": "dark-red", "mode": "fixed" } }]
            },
            {
              "matcher": { "id": "byName", "options": "high" },
              "properties": [{ "id": "color", "value": { "fixedColor": "dark-orange", "mode": "fixed" } }]
            },
            {
              "matcher": { "id": "byName", "options": "medium" },
              "properties": [{ "id": "color", "value": { "fixedColor": "dark-yellow", "mode": "fixed" } }]
            },
            {
              "matcher": { "id": "byName", "options": "low" },
              "properties": [{ "id": "color", "value": { "fixedColor": "dark-blue", "mode": "fixed" } }]
            }
          ]
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "multi"
          }
        }
      },
      {
        "id": 13,
        "type": "row",
        "title": "Smart Alert Groups",
        "gridPos": { "x": 0, "y": 28, "w": 24, "h": 1 },
        "collapsed": false
      },
      {
        "id": 14,
        "title": "Alert Grouping Efficiency",
        "type": "stat",
        "gridPos": { "x": 0, "y": 29, "w": 6, "h": 4 },
        "description": "Total alert groups created vs individual alerts",
        "targets": [
          {
            "expr": "sum(smart_alerting_grouped_total)",
            "refId": "A",
            "datasource": { "type": "prometheus", "uid": "prometheus" }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 10 },
                { "color": "red", "value": 20 }
              ]
            }
          }
        },
        "options": {
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "center"
        }
      },
      {
        "id": 15,
        "title": "Alerts Suppressed",
        "type": "stat",
        "gridPos": { "x": 6, "y": 29, "w": 6, "h": 4 },
        "description": "Total alerts suppressed by suppression engine",
        "targets": [
          {
            "expr": "sum(smart_alerting_suppressed_total)",
            "refId": "A",
            "datasource": { "type": "prometheus", "uid": "prometheus" }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [{ "color": "green", "value": null }]
            }
          }
        },
        "options": {
          "textMode": "value_and_name",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center"
        }
      },
      {
        "id": 16,
        "title": "Alert Fatigue Reduction",
        "type": "gauge",
        "gridPos": { "x": 12, "y": 29, "w": 6, "h": 4 },
        "description": "Percentage of alert noise reduced (target >50%)",
        "targets": [
          {
            "expr": "smart_alerting_fatigue_reduction * 100",
            "refId": "A",
            "datasource": { "type": "prometheus", "uid": "prometheus" }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "yellow", "value": 30 },
                { "color": "green", "value": 50 }
              ]
            }
          }
        },
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        }
      },
      {
        "id": 17,
        "title": "Alerts Routed",
        "type": "stat",
        "gridPos": { "x": 18, "y": 29, "w": 6, "h": 4 },
        "description": "Total alerts routed to channels",
        "targets": [
          {
            "expr": "sum(smart_alerting_routed_total)",
            "refId": "A",
            "datasource": { "type": "prometheus", "uid": "prometheus" }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [{ "color": "green", "value": null }]
            }
          }
        },
        "options": {
          "textMode": "value_and_name",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center"
        }
      },
      {
        "id": 18,
        "title": "Alert Groups by Service",
        "type": "piechart",
        "gridPos": { "x": 0, "y": 33, "w": 8, "h": 8 },
        "description": "Distribution of alert groups across services",
        "targets": [
          {
            "expr": "sum by (service) (smart_alerting_grouped_total)",
            "refId": "A",
            "datasource": { "type": "prometheus", "uid": "prometheus" },
            "legendFormat": "{{service}}"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          },
          "pieType": "pie",
          "tooltip": {
            "mode": "single"
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 19,
        "title": "Alerts by Source Over Time",
        "type": "timeseries",
        "gridPos": { "x": 8, "y": 33, "w": 8, "h": 8 },
        "description": "Incoming alerts by source (Prometheus, Grafana, DataHub, etc.)",
        "targets": [
          {
            "expr": "sum by (source) (rate(smart_alerting_received_total{source=~\"$alert_source\"}[5m]))",
            "refId": "A",
            "datasource": { "type": "prometheus", "uid": "prometheus" },
            "legendFormat": "{{source}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": { "mode": "palette-classic" },
            "custom": {
              "lineInterpolation": "smooth",
              "showPoints": "auto",
              "fillOpacity": 20,
              "stacking": {
                "mode": "normal"
              }
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "multi"
          }
        }
      },
      {
        "id": 20,
        "title": "Suppression Reasons",
        "type": "piechart",
        "gridPos": { "x": 16, "y": 33, "w": 8, "h": 8 },
        "description": "Distribution of why alerts are suppressed",
        "targets": [
          {
            "expr": "sum by (reason) (smart_alerting_suppressed_total)",
            "refId": "A",
            "datasource": { "type": "prometheus", "uid": "prometheus" },
            "legendFormat": "{{reason}}"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          },
          "pieType": "donut",
          "tooltip": {
            "mode": "single"
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 21,
        "type": "row",
        "title": "Root Cause Analysis",
        "gridPos": { "x": 0, "y": 41, "w": 24, "h": 1 },
        "collapsed": false
      },
      {
        "id": 22,
        "title": "Root Cause Analysis Success Rate",
        "type": "gauge",
        "gridPos": { "x": 0, "y": 42, "w": 8, "h": 6 },
