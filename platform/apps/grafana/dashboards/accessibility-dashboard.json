{
  "dashboard": {
    "title": "Accessibility Testing Dashboard",
    "tags": ["accessibility", "a11y", "wcag", "quality"],
    "timezone": "utc",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "5m",
    "time": {
      "from": "now-7d",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Overall Accessibility Score",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "avg(lighthouse_accessibility_score)",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "green"}
              ]
            },
            "max": 100
          }
        }
      },
      {
        "id": 2,
        "title": "Test Pass Rate (Last 7 Days)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(accessibility_tests_passed) / sum(accessibility_tests_total) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 80, "color": "yellow"},
                {"value": 95, "color": "green"}
              ]
            },
            "max": 100
          }
        }
      },
      {
        "id": 3,
        "title": "Critical Violations",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(axe_critical_violations)",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "WCAG 2.1 AA Compliance",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "wcag_aa_compliance_status",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "0", "text": "❌ Non-Compliant"},
              {"type": "value", "value": "1", "text": "✅ Compliant"}
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Accessibility Score Trend",
        "type": "timeseries",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "lighthouse_accessibility_score",
            "legendFormat": "Lighthouse Score",
            "refId": "A"
          },
          {
            "expr": "axe_core_pass_rate",
            "legendFormat": "Axe-Core Pass Rate",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10,
              "showPoints": "always"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "green"}
              ]
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 6,
        "title": "Violations by Severity",
        "type": "piechart",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum by (severity) (axe_violations)",
            "legendFormat": "{{severity}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "critical"},
              "properties": [{"id": "color", "value": {"fixedColor": "red", "mode": "fixed"}}]
            },
            {
              "matcher": {"id": "byName", "options": "serious"},
              "properties": [{"id": "color", "value": {"fixedColor": "orange", "mode": "fixed"}}]
            },
            {
              "matcher": {"id": "byName", "options": "moderate"},
              "properties": [{"id": "color", "value": {"fixedColor": "yellow", "mode": "fixed"}}]
            },
            {
              "matcher": {"id": "byName", "options": "minor"},
              "properties": [{"id": "color", "value": {"fixedColor": "blue", "mode": "fixed"}}]
            }
          ]
        }
      },
      {
        "id": 7,
        "title": "Test Execution History",
        "type": "table",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 18},
        "targets": [
          {
            "expr": "accessibility_test_results",
            "format": "table",
            "refId": "A"
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [{"displayName": "Time", "desc": true}]
        },
        "fieldConfig": {
          "defaults": {},
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "status"},
              "properties": [
                {
                  "id": "custom.cellOptions",
                  "value": {
                    "type": "color-text"
                  }
                },
                {
                  "id": "mappings",
                  "value": [
                    {"type": "value", "value": "passed", "text": "✅ Passed", "color": "green"},
                    {"type": "value", "value": "failed", "text": "❌ Failed", "color": "red"}
                  ]
                }
              ]
            }
          ]
        }
      },
      {
        "id": 8,
        "title": "Component-Level Violations",
        "type": "bargauge",
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "sum by (component) (axe_component_violations)",
            "legendFormat": "{{component}}",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "WCAG Rule Violations",
        "type": "bargauge",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 28},
        "targets": [
          {
            "expr": "sum by (rule) (axe_rule_violations)",
            "legendFormat": "{{rule}}",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 3, "color": "red"}
              ]
            }
          }
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=\"AccessibilityTestFailed\"}",
          "iconColor": "red",
          "name": "Accessibility Alerts",
          "step": "60s",
          "tagKeys": "alertname,severity",
          "textFormat": "{{alertname}}: {{description}}",
          "titleFormat": "Alert"
        }
      ]
    },
    "templating": {
      "list": [
        {
          "name": "component",
          "type": "query",
          "query": "label_values(axe_component_violations, component)",
          "datasource": "Prometheus",
          "multi": true,
          "includeAll": true,
          "allValue": ".*"
        },
        {
          "name": "severity",
          "type": "custom",
          "options": [
            {"text": "All", "value": "$__all"},
            {"text": "Critical", "value": "critical"},
            {"text": "Serious", "value": "serious"},
            {"text": "Moderate", "value": "moderate"},
            {"text": "Minor", "value": "minor"}
          ],
          "multi": true,
          "includeAll": true
        }
      ]
    }
  },
  "overwrite": true,
  "message": "Automated Accessibility Testing Dashboard"
}
