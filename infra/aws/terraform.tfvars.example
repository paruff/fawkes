###############################################
# Fawkes AWS EKS Module Example Variables
# Copy to terraform.tfvars and adjust as needed.
###############################################

region              = "us-east-2"
environment         = "dev"
owner               = "fawkes"
extra_tags = {
  CostCenter = "platform"
}

vpc_cidr         = "10.0.0.0/16"
private_subnets  = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
public_subnets   = ["10.0.101.0/24", "10.0.102.0/24", "10.0.103.0/24"]

# EKS version (ensure supported by AWS at time of deployment)
eks_version = "1.28"

ssh_ingress_cidr_one = "0.0.0.0/0"
ssh_ingress_cidr_two = "0.0.0.0/0"
ssh_ingress_cidrs    = ["0.0.0.0/0"]
egress_cidr_block    = "0.0.0.0/0"

worker_group_1_instance_type = "t3.medium"
worker_group_2_instance_type = "t3.medium"
worker_group_1_capacity      = 2
worker_group_2_capacity      = 1
worker_group_1_min_size      = 2
worker_group_1_max_size      = 5
worker_group_2_min_size      = 1
worker_group_2_max_size      = 3

# Optional: provide a KMS key ARN to enable secret encryption
kms_key_arn = null

# Legacy auth mappings -> aws-auth ConfigMap (consider migrating to EKS Access Entries when module/version supports)
map_roles = [
  {
    rolearn  = "arn:aws:iam::123456789012:role/example-admin-role"
    username = "admin-role"
    groups   = ["system:masters"]
  }
]

map_users = [
  {
    userarn  = "arn:aws:iam::123456789012:user/dev1"
    username = "dev1"
    groups   = ["system:masters"]
  }
]

map_accounts = ["123456789012"]
